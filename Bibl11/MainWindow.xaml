<Window x:Class="Bibl11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:themes="clr-namespace:themes;assembly=themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{DynamicResource Background}"
        Title="Bibl11" Height="300" Width="400">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox  x:Name="InputText" Grid.Row="0" Margin="10,27,10,62" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <Button Background="{DynamicResource Button}" Content="Сериализация" Grid.Row="1" Margin="10" Click="Click" />
        <Button  Background="{DynamicResource Button}" Content="Десериализация" Grid.Row="2" Margin="10" Click="Click1" />
        <Button  Background="{DynamicResource Button}" Content="Изменить стиль" Grid.Row="3" Margin="10" Click="Click2" />
        <Button  Background="{DynamicResource Button}" Content="Изменить стиль" Grid.Row="4" Margin="10" Click="Click3" />
        <TextBlock x:Name="OutputText" Margin="10,67,0,10" TextWrapping="Wrap"/>
    </Grid>
</Window>
